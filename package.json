{
  "name": "root",
  "version": "0.0.3",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/cdklabs/awscdk-change-analyzer.git"
  },
  "scripts": {
    "preci": "rm -rf node_modules",
    "ci": "yarn install --frozen-lockfile",
